<Window x:Class="FoshanVirusKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FoshanVirusKiller" Width="600" Height="400" MinWidth="600" MinHeight="400" FontFamily="Microsoft YaHei" FontSize="14">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="251*"/>
            <RowDefinition Height="110*" MinHeight="110" MaxHeight="110"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="console" Margin="30,30,30,20" Text="【rundll32.exe】蠕虫病毒专杀程序使用说明：&#xA;&#xA;1. 将程序主体（即本文件）放在U盘根目录下运行，即可查杀并恢复U盘。&#xA;2. 如果没有U盘，放在系统任一目录下运行，即可查杀系统关键位置。&#xA;3. 该程序只针对【rundll32.exe】这一种病毒。&#xA;4. 病毒特征：&#xD;&#xA;U盘根目录下，图标为文件夹，但却有大小，为665KB。&#xD;&#xA;而且文件类型是 Application（正常文件夹类型是 File Folder，且没有大小）。&#xA;" AcceptsReturn="True" TextOptions.TextFormattingMode="Display" ClipToBounds="True" Padding="5" Foreground="#FFB85300" FontFamily="Microsoft YaHei" FontSize="14" HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="killer" Content="一 键 杀 毒" HorizontalAlignment="Right" Height="50" Margin="0,0,30,40" VerticalAlignment="Bottom" Width="140" Click="OneKeyKill" Grid.Row="1" FontFamily="Microsoft YaHei" FontSize="16" Foreground="#FF0080FF"/>
        <GroupBox Header="快速系统设置" HorizontalAlignment="Left" Margin="30,0,0,20" Grid.Row="1" Width="364" VerticalAlignment="Bottom" Height="80" MinWidth="350" MinHeight="80" FontFamily="Microsoft YaHei" FontSize="14">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="43*"/>
                    <ColumnDefinition Width="45*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="checkHidden" Content="显示隐藏的文件（夹）" Checked="ShowHidden" Unchecked="HideHidden" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="17" Width="160"/>
                <CheckBox x:Name="checkSystem" Content="显示受系统保护的文件" Checked="ShowSystem" Unchecked="HideSystem" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Column="1" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="17" Width="160"/>
                <CheckBox x:Name="checkExtension" Content="显示文件扩展名" Checked="ShowExtension" Unchecked="HideExtension" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Grid.Row="1" Height="17" Width="118"/>
                <CheckBox x:Name="checkReverse" Content="（预留功能）" Checked="CheckedReverse" Unchecked="UncheckedReverse" HorizontalAlignment="Left" Margin="5,5,0,0" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="17" Width="104"/>
            </Grid>
        </GroupBox>
        <TextBlock HorizontalAlignment="Right" Height="20" Margin="0,0,30,8" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Width="{Binding ActualWidth, ElementName=killer, Mode=OneWay}">
            <Hyperlink Click="OpenHyperlink" NavigateUri="https://github.com/Himmelt/FoshanVirusKiller" ToolTip="前往项目主页">查看项目主页及更新</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
