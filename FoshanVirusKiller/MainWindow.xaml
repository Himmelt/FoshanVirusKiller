<Window x:Class="FoshanVirusKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoshanVirusKiller"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MinWidth="300" MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="227*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <Button x:Name="btn_kill" Content="K" HorizontalAlignment="Center" Margin="0,20,0,30" Width="160" VerticalAlignment="Bottom" Height="40" Grid.Row="1" FontSize="16" Click="OneKeyKill" FontFamily="/FoshanVirusKiller;component/Resources/#Hiragino Sans GB W3"/>
        <TextBox x:Name="text_log" Margin="40,40,40,10" Text="[rundll32.exe]" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" IsUndoEnabled="False" FontFamily="/FoshanVirusKiller;component/Resources/#Hiragino Sans GB W3" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
