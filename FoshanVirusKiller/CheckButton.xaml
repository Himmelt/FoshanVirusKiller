<UserControl x:Class="FoshanVirusKiller.CheckButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cvt="clr-namespace:FoshanVirusKiller"
             xmlns:local="clr-namespace:FoshanVirusKiller"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:MathConvert x:Key="MathConvert"/>
        <local:MathConvert x:Key="Int_Div2"/>
    </UserControl.Resources>
    <Grid>
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Height="66" Margin="0,112,235,122" Stroke="Black" RadiusX="{Binding ActualHeight, ConverterParameter=/\,2, Converter={StaticResource MathConvert}, Mode=OneWay, RelativeSource={RelativeSource Self}}" RadiusY="{Binding ActualHeight, ConverterParameter=/\,2, Converter={StaticResource MathConvert}, Mode=OneWay, RelativeSource={RelativeSource Self}}" MinWidth="{Binding ActualHeight, ConverterParameter=*\,2, Converter={StaticResource MathConvert}, Mode=OneWay, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
